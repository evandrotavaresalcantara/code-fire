{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "target": "es2018",
    "module": "Node16",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "removeComments": true,
    "allowJs": true
  },
  "include": ["**/*.ts"],
  "exclude": ["dist", "node_modules", "coverage"]
}
